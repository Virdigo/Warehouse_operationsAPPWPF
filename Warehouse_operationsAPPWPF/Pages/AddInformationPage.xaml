<Page x:Class="Warehouse_operationsAPPWPF.Pages.AddInformationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Warehouse_operationsAPPWPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="800"
      Title="AddInformationPage">

    <Grid Background="#3b5998">
 
        <StackPanel Margin="10">

            <Label Content="ID продукта" Foreground="White"/>
            <TextBox Name="ProductIdTextBox"/>
            <Label Content="Количество" Foreground="White"/>
            <TextBox Name="QuantityTextBox"/>
            <Label Content="ID документа" Foreground="White"/>
            <TextBox Name="DocumentIdTextBox"/>
            <Label Content="ID поставщика" Foreground="White"/>
            <TextBox Name="SupplierIdTextBox"/>
            <Label Content="Стоимость" Foreground="White"/>
            <TextBox Name="CostTextBox"/>
            <Label Content="Цена" Foreground="White"/>
            <TextBox Name="PriceTextBox"/>

            <Button Content="Сохранить" Click="SaveButton_Click" Margin="0,10,0,0" Background="White"/>
            <Button Content="Назад" Click="BackButton_Click" Margin="0,10,0,0" Background="White"/>
        </StackPanel>
    </Grid>
</Page>