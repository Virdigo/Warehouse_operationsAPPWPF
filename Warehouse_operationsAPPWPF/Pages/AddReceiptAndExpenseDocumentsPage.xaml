<Page x:Class="Warehouse_operationsAPPWPF.Pages.AddReceiptAndExpenseDocumentsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Warehouse_operationsAPPWPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddReceiptAndExpenseDocumentsPage" Background="#3b5998">

    <Grid>
        <StackPanel Margin="10">
            <Label Content="Дата" Foreground="White"/>
            <TextBox Name="DataTextBox" Height="40"/>
            <Label Content="Приходно или расходный документ" Foreground="White"/>
            <TextBox Name="ReceiptAndexpense_documentsTextBox" Height="40"/>
            <Label Content="ID Пользователя" Foreground="White"/>
            <TextBox Name="UserIdTextBox" Height="40"/>
            <Button Content="Сохранить" Click="SaveButton_Click" Margin="0,10,0,0" Background="White"/>
            <Button Content="Назад" Click="BackButton_Click" Margin="0,10,0,0" Background="White"/>
        </StackPanel>
    </Grid>
</Page>
