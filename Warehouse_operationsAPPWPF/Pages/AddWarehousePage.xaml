<Page x:Class="Warehouse_operationsAPPWPF.Pages.AddWarehousePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Warehouse_operationsAPPWPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddWarehousePage" Background="#3b5998">

    <Grid>
        <StackPanel Margin="10">
            <Label Content="Наименование" Foreground="White"/>
            <TextBox Name="NameTextBox" Height="40"/>
            <Label Content="Адрес" Foreground="White"/>
            <TextBox Name="AddressTextBox" Height="40"/>
            <Label Content="ID Пользователя" Foreground="White"/>
            <TextBox Name="UserIdTextBox" Height="40"/>
            <Button Content="Сохранить" Click="SaveButton_Click" Margin="0,10,0,0" Background="White"/>
            <Button Content="Назад" Click="BackButton_Click" Margin="0,10,0,0" Background="White"/>
        </StackPanel>
    </Grid>
</Page>
