<Page x:Class="Warehouse_operationsAPPWPF.Pages.AddOstatkiPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Warehouse_operationsAPPWPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="800"
      Title="AddOstatkiPage" Background="#3b5998">

    <Grid>
        <StackPanel Margin="10">
           
            <Label Content="Код склада" Foreground="White"/>
            <TextBox Name="WarehousesIdTextBox"/>
            <Label Content="Код товара" Foreground="White"/>
            <TextBox Name="ProductIdTextBox"/>
            <Label Content="Количество остатков" Foreground="White"/>
            <TextBox Name="Quantity_OstatkiTextBox"/>
           
            <Button Content="Сохранить" Click="SaveButton_Click" Margin="0,10,0,0" Background="White"/>
            <Button Content="Назад" Click="BackButton_Click" Margin="0,10,0,0" Background="White"/>
        </StackPanel>
    </Grid>
</Page>